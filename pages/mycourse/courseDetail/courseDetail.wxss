/* pages/mycourse/courseDetail/courseDetail.wxss */
page {
  background-color: #efefef;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 750rpx;
  background-color: #ffffff;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 700rpx;
  min-height: 100rpx;
  border-bottom: #efefef solid 1px;
}

.item text {
  display: block;
  font-size: 16px;
  line-height: 100rpx;
}

.detail {
  display: block;
  padding-top: 22rpx;
  padding-bottom: 22rpx;
  line-height: 26px;
  width: 700rpx;
}

.detail text:last-child {
  color: #666666;
}