/* pages/me/myinfo/myinfo.wxss */
page {
  background-color: #efefef;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  width: 750rpx;
  background-color: #ffffff;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 700rpx;
  min-height: 100rpx;
  border-bottom: #efefef solid 1px;
}

.item text {
  display: block;
  font-size: 16px;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
}

.item text:last-child {
  max-width: 540rpx;
  word-wrap: break-word;
}

.item image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.update-title {
  font-size: 14px;
  color: #888;
  margin-top: 8px;
  padding-left: 20px;
  width: 100%;
  text-align: left;
}

.image {
  width: 700rpx;
  display: block;
  background-color: #ffffff;
  border-bottom: #efefef solid 1px;
}

.image-box {
  float: left;
  position: relative;
  width: 120rpx;
  height: 120rpx;
  padding-top: 25rpx;
  padding-right: 22rpx;
  padding-bottom: 25rpx;
}

.image-box image {
  width: 120rpx;
  height: 120rpx;
  z-index: 0;
}

.face {
  width: 100rpx !important;
  height: 100rpx !important;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}