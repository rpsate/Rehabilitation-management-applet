/* components/menuList/menuList.wxss */
.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    border-top: 1px solid #dadada;
    border-bottom: 1px solid #dadada;
    background-color: #ffffff;
}

.container-inner {
    margin-left: 22rpx;
    margin-right: 22rpx;
    width: 706rpx;
}

.container-inner:not(:first-child) {
    border-top: 1px solid #dadada;
}

.list {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-left: 12rpx;
    padding-right: 12rpx;
    height: 100rpx;
}

.button {
    background-color: inherit;
    border: none;
}
.button::after {
    border: none;
}

.content {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.content text {
    font-size: 16px;
    color: #333333;
    padding-left: 22rpx;
    padding-bottom: 5rpx;
}

.list image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
}