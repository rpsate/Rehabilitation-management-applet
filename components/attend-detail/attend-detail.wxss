/* components/attend-detail/attend-detail.wxss */
.table {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  background-color: #ffffff;
}

.thead,
.tbody {
  width: 700rpx;
  border-top: solid #efefef 1px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  font-size: 16px;
}

.thead text,
.tbody text {
  width: 233.3rpx;
}

.thead {
  font-weight: bold;
}

.tbody {
  color: #666666;
}

.active {
  color: #1a8be9;
}

.active:active {
  background-color: #7dbef4;
}