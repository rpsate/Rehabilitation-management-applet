/* components/notice-list.wxss */
.container {
  display: flex;
  flex-direction: column;
  width: 700rpx;
  background-color: #ffffff;
  border-radius: 5px;
}

.title,
.content,
.time {
  padding: 1px 12px;
}

.title {
  font-size: 16px;
  padding-top: 8px;
  font-weight: bold;
  color: #333333;
}

.content {
  font-size: 16px;
  color: #666666;
}

.time {
  padding-bottom: 8px;
  font-size: 14px;
  color: #999999;
}